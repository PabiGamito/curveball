	<!-- Create New Event -->

	<h1>New Event</h1>
	<div class="notification-box">
		<form action="/new_event" method="post" accept-charset="utf-8">
			<input type="hidden" name="host_id" value="<%=session[:user]%>"><br>
			Event Name: <input class="inp-text" type="text" name="name"><br>
			<select name="activities">
				<% @all_activities.each do |activity|%>
				<option value="<%=activity.activity_name%>"><%=activity.activity_name.capitalize%></option>
				<%end%>
			</select><br>

			Date:
			<input class="inp-text" type="datetime-local" name="datetime">

			<div id="panel">
				Location: <input id="address" type="textbox" value="">
				<input type="button" value="Find" onclick="codeAddress()">
				<input type="hidden" name="latitude" value="">
				<input type="hidden" name="longitude" value=""><br>
				<button class="tweet-btn" type="submit">Create</button><br><br>
			</div>
			<div id="map-canvas"></div>
			<br>
		</form>
